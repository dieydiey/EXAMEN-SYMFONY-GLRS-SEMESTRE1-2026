@model inscription.Models.Inscription

@{
    ViewData["Title"] = "Inscription Étudiant";
    Layout = "_Layout"; 
}

<style>
    .card-registration {
        border-radius: 15px;
        overflow: hidden;
    }
    .gradient-custom {
        background: linear-gradient(to right, #4e73df, #224abe);
    }
    .form-control-lg, .form-select-lg {
        border-radius: 10px;
        font-size: 0.95rem;
        border: 1px solid #d1d3e2;
    }
    .form-control-lg:focus, .form-select-lg:focus {
        border-color: #4e73df;
        box-shadow: 0 0 0 0.2rem rgba(78, 115, 223, 0.1);
    }
    .btn-submit {
        border-radius: 10px;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s;
    }
    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-xl-7 col-lg-8 col-md-10">
            
            @* Alertes de notification *@
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success border-0 shadow-sm alert-dismissible fade show mb-4" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-check-circle-fill fs-4 me-3"></i>
                        <div>@TempData["Success"]</div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger border-0 shadow-sm alert-dismissible fade show mb-4" role="alert">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-octagon-fill fs-4 me-3"></i>
                        <div>
                            <strong>Erreur d'inscription</strong>
                            <div asp-validation-summary="All" class="small mt-1 text-danger"></div>
                        </div>
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="card card-registration shadow-lg border-0">
                <div class="gradient-custom p-4 text-white text-center">
                    <div class="mb-2">
                        <i class="bi bi-person-badge fs-1"></i>
                    </div>
                    <h3 class="fw-bold mb-0">Nouvelle Inscription</h3>
                    <p class="text-white-50 small mb-0">Remplissez les informations pour inscrire l'étudiant</p>
                </div>

                <div class="card-body p-4 p-md-5 bg-white">
                    <form asp-action="Create" method="post" id="registrationForm">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark mb-2">
                                <i class="bi bi-person-circle text-primary me-2"></i>Sélection de l'Étudiant
                            </label>
                            <select name="etudiantId" class="form-select form-select-lg shadow-sm" required>
                                <option value="" disabled selected>Rechercher un étudiant par matricule ou nom...</option>
                                @foreach (var e in ViewBag.Etudiants)
                                {
                                    <option value="@e.Id">
                                        @e.Matricule | @e.Nom.ToUpper() @e.Prenom
                                    </option>
                                }
                            </select>
                            <div class="form-text mt-2">Seuls les étudiants non inscrits apparaîtront ici.</div>
                        </div>

                        <div class="mb-5">
                            <label class="form-label fw-bold text-dark mb-2">
                                <i class="bi bi-mortarboard-fill text-primary me-2"></i>Classe de destination
                            </label>
                            <select name="classeId" class="form-select form-select-lg shadow-sm" required>
                                <option value="" disabled selected>Choisir le niveau scolaire...</option>
                                @foreach (var c in ViewBag.Classes)
                                {
                                    <option value="@c.Id">@c.Libelle</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex flex-column flex-sm-row justify-content-between align-items-center gap-3 border-top pt-4">
                            <a asp-action="Index" class="btn btn-light text-secondary btn-lg px-4 border">
                                <i class="bi bi-arrow-left me-2"></i>Retour
                            </a>
                            <button type="submit" class="btn btn-primary btn-submit btn-lg px-5 shadow">
                                <i class="bi bi-shield-check me-2"></i>Confirmer l'inscription
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted small">
                    <i class="bi bi-info-circle me-1"></i> 
                    L'inscription sera automatiquement rattachée à l'année scolaire en cours.
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('registrationForm').onsubmit = function() {
            const btn = this.querySelector('button[type="submit"]');
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Traitement...';
            btn.classList.add('disabled');
        };
    </script>
}