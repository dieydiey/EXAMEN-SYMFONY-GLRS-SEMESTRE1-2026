@model IEnumerable<inscription.Models.Inscription>

@{
    ViewData["Title"] = "Consultation par classe";
    Layout = "_Layout";
    var currentClasseId = Context.Request.Query["classeId"].ToString();
}

<style>
    .search-section {
        border-radius: 15px;
        background: #f8f9fc;
        border: 1px solid #e3e6f0;
    }
    .table-container {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 120, 0.1);
    }
    .thead-custom {
        background-color: #4e73df;
        color: white;
    }
    .badge-class {
        font-size: 0.85rem;
        padding: 0.5em 0.8em;
        border-radius: 50rem;
    }
    .empty-state-icon {
        font-size: 4rem;
        color: #d1d3e2;
        margin-bottom: 1rem;
    }
    /* Animation pour l'icône d'attente */
    .animate-float {
        animation: float 3s ease-in-out infinite;
    }
    @@keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
    }
</style>

<div class="container py-4">
    <div class="d-flex align-items-center mb-4">
        <div class="bg-primary text-white rounded-circle p-3 me-3 shadow-sm">
            <i class="bi bi-journal-text fs-3"></i>
        </div>
        <div>
            <h3 class="fw-bold text-dark mb-0">Consultation des Inscriptions</h3>
            <p class="text-muted mb-0">Filtrez et visualisez les étudiants par classe</p>
        </div>
    </div>

    <div class="card search-section shadow-sm border-0 mb-5">
        <div class="card-body p-4">
            <form method="get" asp-action="Index" class="row g-3 align-items-end">
                <div class="col-lg-9 col-md-8">
                    <label class="form-label fw-bold text-secondary small text-uppercase">Niveau / Classe</label>
                    <div class="input-group">
                        <span class="input-group-text bg-white border-end-0"><i class="bi bi-filter text-primary"></i></span>
                        <select name="classeId" class="form-select form-select-lg border-start-0 ps-0" required>
                            <option value="">-- Sélectionnez une classe --</option>
                            @if (ViewBag.Classes != null)
                            {
                                foreach (var c in ViewBag.Classes)
                                {
                                    <option value="@c.Id" selected="@(currentClasseId == c.Id.ToString() ? "selected" : null)">
                                        @c.Libelle
                                    </option>
                                }
                            }
                        </select>
                    </div>
                </div>
                <div class="col-lg-3 col-md-4">
                    <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm fw-bold">
                        <i class="bi bi-search me-2"></i>Afficher la liste
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(currentClasseId) && currentClasseId != "0")
    {
        <div class="card table-container border-0">
            <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary text-uppercase small tracking-wider">
                    <i class="bi bi-table me-2"></i>Résultats de la recherche
                </h6>
                <span class="badge bg-light text-primary border badge-class">
                    @(Model?.Count() ?? 0) étudiant(s) trouvé(s)
                </span>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="thead-custom">
                            <tr>
                                <th class="ps-4 border-0">Matricule</th>
                                <th class="border-0">Nom complet de l'étudiant</th>
                                <th class="border-0">Date d'inscription</th>
                                <th class="border-0 text-center">Année Scolaire</th>
                            </tr>
                        </thead>
                        <tbody class="border-top-0">
                            @if (Model != null && Model.Any())
                            {
                                foreach (var i in Model)
                                {
                                    <tr>
                                        <td class="ps-4">
                                            <span class="badge bg-light text-dark border">@i.Etudiant?.Matricule</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-sm me-3 bg-soft-primary rounded-circle text-center" style="width: 32px; height: 32px; line-height: 32px; background: #eef2ff; color: #4e73df;">
                                                    <i class="bi bi-person-fill"></i>
                                                </div>
                                                <span class="fw-bold">@i.Etudiant?.Nom.ToUpper() @i.Etudiant?.Prenom</span>
                                            </div>
                                        </td>
                                        <td class="text-muted">
                                            <i class="bi bi-calendar3 me-2"></i>@i.DateInscription.ToString("dd MMM yyyy")
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-success-soft text-success" style="background: #e6fcf5;">
                                                @i.AnneeScolaire?.Libelle
                                            </span>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4" class="text-center py-5">
                                        <div class="empty-state-icon"><i class="bi bi-folder-x"></i></div>
                                        <p class="text-muted fw-bold">Aucune inscription pour cette classe.</p>
                                        <a asp-action="Create" class="btn btn-outline-primary btn-sm mt-2">
                                            <i class="bi bi-plus-circle me-1"></i>Inscrire un étudiant
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5 mt-4">
            <div class="animate-float">
                <i class="bi bi-search-heart empty-state-icon text-primary opacity-25" style="font-size: 6rem;"></i>
            </div>
            <h4 class="text-dark fw-bold mt-3">Prêt à consulter la liste ?</h4>
            <p class="text-muted mx-auto" style="max-width: 400px;">
                Veuillez sélectionner une classe dans le menu déroulant ci-dessus pour afficher les étudiants inscrits.
            </p>
        </div>
    }
</div>