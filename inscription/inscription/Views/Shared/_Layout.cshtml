<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion Inscriptions</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm mb-4">
    <div class="container">
        <a class="navbar-brand fw-bold" asp-controller="Inscription" asp-action="Index">
            <i class="bi bi-mortarboard-fill"></i> G-INSCRIPTION
        </a>
        
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Inscription" asp-action="Index">
                        <i class="bi bi-list-ul"></i> Liste Inscriptions
                    </a>
                </li>
                <li class="nav-item ms-lg-2">
                    <a class="btn btn-primary" asp-controller="Inscription" asp-action="Create">
                        <i class="bi bi-plus-circle"></i> Inscrire
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

@* C'EST ICI QU'IL FAUT PLACER CETTE LIGNE *@
@await RenderSectionAsync("Scripts", required: false)

</body>
</html>